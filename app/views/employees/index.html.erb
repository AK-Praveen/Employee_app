<p id="notice"><%= notice %></p>

<h3 class="title">ALL EMPLOYEES</h3>
<div class="w-50">
<%= button_to new_employee_path, :method => "get", :class => "add_button" do %><span>Add Employee</span><% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Designation</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>

    <% if @employees.exists? %>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= link_to employee.name, employee %></td>
          <td><%= employee.age %></td>
          <td><%= employee.gender %></td>
          <td><%= employee.designation %></td>
          <td>
            <%= link_to 'Edit', edit_employee_path(employee) %>
            <%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">No Employees</td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
